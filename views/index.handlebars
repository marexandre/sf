<div class="col-md-12">
  <div class="forum-head">
    <h1><a href="/">Forum</a></h1>
  </div>

  <ul class="nav nav-tabs">
    <li class="active"><a href="#">Active</a></li>
    <li ><a href="#">Starred</a></li>
    <li ><a href="#">Archived</a></li>
  </ul>

  <div class="thread">
    <ul class="list-unstyled list-thread thead hidden-xs">
      <li class="main">Category</li>
      <li class="num">Athletes</li>
      <li class="num">Posts</li>
      <li class="num">Messages</li>
      <li class="update">Last Updated</li>
    </ul>
    <ul class="list-unstyled list-thread">
      {{#each data}}
      <li class="tbody">
        <div class="main">
          <div class="thread-meta">
            <div class="thread-icon">
              <i class="icon-{{category}}"></i>
            </div>
            <div class="thread-title">
              <a href="category/{{forum_id}}">{{label}}</a>
            </div>
          </div>
        </div>
        <div class="num num-xs">
          <i class="icon-athletes visible-xs-inline-block"></i>
          {{number athletes}}
        </div>
        <div class="num">
          <i class="icon-posts visible-xs-inline-block"></i>
          {{number posts}}
        </div>
        <div class="num">
          <i class="icon-messages visible-xs-inline-block"></i>
          {{number messages}}
        </div>
        <div class="update">
          <div class="thread-meta">
            <div class="thread-icon avatar">
              <img src="{{update.user_image}}" />
            </div>
            <div class="thread-title">
              <a href="#">{{update.user_name}}</a>
              <p class="date">{{update.last_updated}}</p>
            </div>
          </div>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>


</div>
